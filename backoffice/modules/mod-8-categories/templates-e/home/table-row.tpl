<tr>
    <td class="align-middle">{c2r-id}</td>
    <td class="align-middle">{c2r-title}</td>
    <td class="align-middle">{c2r-category-section}</td>
    <td class="align-middle">{c2r-parent-nr}</td>
    <td class="align-middle">{c2r-published}</td>
    <td class="align-middle" title="{c2r-date-updated-label} : {c2r-date-updated}">{c2r-date-created}</td>
    <td class="align-middle tacenter">
        <a href="{c2r-path-bo}/{c2r-lg}/8-categories/view/{c2r-id}" class="btn btn-add{c2r-hide-but}" role="button">
			<i class="fas fa-eye" aria-hidden="true"></i>
		</a>
        <a href="{c2r-path-bo}/{c2r-lg}/8-categories/edit/{c2r-id}" class="btn btn-edit" role="button">
			<i class="fas fa-edit" aria-hidden="true"></i>
		</a>
        <a href="{c2r-path-bo}/{c2r-lg}/8-categories/delete/{c2r-id}" class="btn btn-cancel{c2r-show-but}" role="button">
			<i class="fas fa-trash" aria-hidden="true"></i>
		</a>
    </td>
</tr>
